<h1>Editing Book</h1>

<%= form_with model: @books, url: update_book_path(@books.id),method: :patch do |f| %>

<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %>

<div class="submit">
<%= f.submit 'Updete Book' %>
</div>

<% end %>

<%= link_to "Edit", edit_book_path(@books.id) %>
<%= link_to "Back", books_path(@books.id) %>
