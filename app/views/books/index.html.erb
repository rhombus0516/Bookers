<h1>Books</h1>

<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    </thead>
    <tbody>

            <% @books.each do |book| %>
            <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td> <%= link_to "show", book_path(book.id) %></td>
            <td> <%= link_to "Edit", edit_book_path(book.id) %></td>
            <td> <%= link_to "Destroy", destroy_book_path(book.id), method: :delete %></td>
            </tr>
            <% end %>
    </tbody>
</table>
<h2>NewBooks</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %>

<div class="submit">
<%= f.submit 'Create Book' %>
</div>
<% end %>